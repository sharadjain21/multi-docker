{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name" : "client",
            "image" : "om21/multi-client",
            "hostname" : "client",
            "essential" : false
        },
        {
            "name" : "server",
            "image" : "om21/multi-server",
            "hostname" : "server",
            "essential" : false
        },
        {
            "name" : "worker",
            "image" : "om21/multi-worker",
            "hostname" :"worker",
            "essential": false
        },
        {
            "name" : "nginx",
            "image" : "om21/multi-nginx",
            "hostname" : "nginx",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort" : 80,
                    "containerPort" : 80
                }
            ],
            "links" : ["server", "client"]

        }

    ]
}